{
  // This file is not used in compilation. It is here just for a nice editor experience.
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "outDir": "./build",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
    },
    "module": "ESNext", // or "ES6", "ES2020", etc., depending on your environment
    "target": "ES6", // or a higher version, depending on your environment
    "jsx": "react-jsx",
    "noEmit": false
  },
  "include": [
    "src/**/*",
    "package.json",
    "log.ts",
    "version.ts",
  ]
}
